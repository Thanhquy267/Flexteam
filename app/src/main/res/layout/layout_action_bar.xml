<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.flexteam.customview.ActionBarViewModel" />
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_action_bar">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_start_icon"
            style="@style/clickableCard"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:onClick="@{(view) -> viewModel.onStartIconClick(view)}"
            android:visibility="@{viewModel.MShouldShowStartIcon? View.VISIBLE : View.GONE}"
            bind:setImageSource="@{viewModel.MStartIconResource}"
            android:layout_marginStart="@dimen/_10sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            style="@style/TitleText"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:text="@{viewModel.MTitle}"
            tools:text="Forgot password"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_end_icon"
            style="@style/clickableCard"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_bell"
            android:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="@{viewModel.MShouldShowEndIcon? View.VISIBLE : View.GONE}"
            android:onClick="@{(view) -> viewModel.onEndIconClick(view)}"
            android:layout_marginEnd="@dimen/_10sdp"/>
    </RelativeLayout>
</layout>