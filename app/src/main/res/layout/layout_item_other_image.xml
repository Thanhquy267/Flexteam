<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_owner"
            style="@style/SmallText"
            android:layout_marginStart="@dimen/_47sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            tools:text="Thanh QuÃ½"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_owner">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_avatar"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_15sdp"
                app:cardBackgroundColor="@color/red_66">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/rl_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cv_avatar"
                android:layout_marginStart="@dimen/_5sdp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_one_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/normal_text"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:visibility="gone">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_image_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/task"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/ll_two_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_image_1_2"
                        android:layout_width="@dimen/_115sdp"
                        android:layout_height="@dimen/_115sdp"
                        app:cardBackgroundColor="@color/normal_text"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:visibility="visible">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_image_1_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/task"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_image_2_2"
                        android:layout_width="@dimen/_115sdp"
                        android:layout_height="@dimen/_115sdp"
                        app:cardBackgroundColor="@color/normal_text"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:visibility="visible">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_image_2_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/task"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_three_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_image_1_3"
                        android:layout_width="@dimen/_76sdp"
                        android:layout_height="@dimen/_76sdp"
                        app:cardBackgroundColor="@color/normal_text"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:visibility="visible">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_image_1_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/task"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_image_2_3"
                        android:layout_width="@dimen/_76sdp"
                        android:layout_height="@dimen/_76sdp"
                        app:cardBackgroundColor="@color/normal_text"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:visibility="visible">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_image_2_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/task"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_image_3_3"
                        android:layout_width="@dimen/_76sdp"
                        android:layout_height="@dimen/_76sdp"
                        app:cardBackgroundColor="@color/normal_text"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:visibility="visible">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_image_3_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/task"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time"
                style="@style/SmallText"
                android:layout_toEndOf="@id/rl_message"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                tools:text="20:30"/>
        </RelativeLayout>

    </RelativeLayout>
</layout>