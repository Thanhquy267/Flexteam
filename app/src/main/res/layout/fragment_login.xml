<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.flexteam.feature.auth.login.LoginViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/ic_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_30sdp"
                android:textStyle="bold" />

            <include
                android:id="@+id/layout_email"
                layout="@layout/layout_input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp" />

            <include
                android:id="@+id/layout_password"
                layout="@layout/layout_input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/NormalText"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:paddingBottom="@dimen/_2sdp"
                android:text="@string/forgot_password_title"
                android:textColor="@color/colorPrimary"
                android:onClick="@{(view) -> viewModel.onForgotPasswordClick(view)}"/>

            <Button
                style="@style/FlexTeam.Button"
                android:layout_marginTop="@dimen/_30sdp"
                android:enabled="@{viewModel.MIsEnableButton}"
                android:onClick="@{(view) -> viewModel.onLoginClick(view)}"
                android:text="@string/login_title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/NormalText"
                    android:text="@string/don_t_have_account_message" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/NormalText"
                    android:text="@string/register_title"
                    android:padding="@dimen/_3sdp"
                    android:onClick="@{(view) -> viewModel.onRegisterClick(view)}"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_70sdp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/v_start"
                    android:layout_width="30dp"
                    android:layout_height="0.4dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/tv_or"
                    android:background="@color/normal_text" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_or"
                    style="@style/SmallText"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:text="@string/or_title" />

                <View
                    android:id="@+id/v_end"
                    android:layout_width="30dp"
                    android:layout_height="0.4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/tv_or"
                    android:background="@color/normal_text" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    style="@style/clickableCard"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:cardBackgroundColor="@color/orange_39"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_google" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TitleText"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="@string/google_title"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/clickableCard"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/blue_98"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_facebook" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TitleText"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="@string/facebook_title"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>