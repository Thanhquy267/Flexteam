<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white">


            <RelativeLayout
                android:id="@+id/rl_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_15sdp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/normalText"
                    android:visibility="gone">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_image_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:src="@drawable/task"/>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_my_chat"
                    android:minHeight="@dimen/_24sdp"
                    android:visibility="visible">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_message"
                        style="@style/NormalText"
                        android:maxWidth="@dimen/_230sdp"
                        tools:text="Tai_lieu_hoc_tap.pdf"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_centerVertical="true"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/tv_message"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:layout_marginStart="@dimen/_minus3sdp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_pdf"
                        android:visibility="gone"/>
                </RelativeLayout>
            </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_time"
            style="@style/SmallText"
            android:layout_toStartOf="@id/rl_message"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            tools:text="20:30"/>

    </RelativeLayout>
</layout>