<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_avatar"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_8sdp"
            app:cardBackgroundColor="@color/red_66"
            app:cardCornerRadius="@dimen/_18sdp"
            app:cardElevation="0dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ll_time"
            android:layout_toEndOf="@id/cv_avatar">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/titleText"
                tools:text="Đức Lê đã nhắc tới bạn" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tag"
                style="@style/NormalText"
                android:layout_below="@id/tv_title"
                android:layout_marginEnd="@dimen/_2sdp"
                android:textColor="@color/colorPrimary"
                tools:text="\@All" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_description"
                style="@style/NormalText"
                android:layout_below="@id/tv_title"
                android:layout_toEndOf="@id/tv_tag"
                android:singleLine="true"
                tools:text="Đức Lê đã nhắc tới bạn." />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time"
                style="@style/SmallText"
                android:layout_gravity="end"
                android:textColor="@color/titleText"
                tools:text="20:30" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/SmallText"
                android:id="@+id/tv_date"
                android:layout_gravity="end"
                android:textColor="@color/titleText"
                tools:text="11/08/2020" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@id/cv_avatar"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@color/normalText" />

    </RelativeLayout>

</layout>