<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_one_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardBackgroundColor="@color/colorPrimary">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_image_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/task" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_two_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image_1_2"
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="@dimen/_115sdp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_image_1_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/task" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image_2_2"
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="@dimen/_115sdp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_image_2_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/task" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_three_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image_1_3"
                    android:layout_width="@dimen/_76sdp"
                    android:layout_height="@dimen/_76sdp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_image_1_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/task" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image_2_3"
                    android:layout_width="@dimen/_76sdp"
                    android:layout_height="@dimen/_76sdp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_image_2_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/task" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image_3_3"
                    android:layout_width="@dimen/_76sdp"
                    android:layout_height="@dimen/_76sdp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_image_3_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/task" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_time"
            style="@style/SmallText"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@id/rl_message"
            tools:text="20:30" />

    </RelativeLayout>
</layout>